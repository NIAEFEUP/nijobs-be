{
  "name": "nijobs-be",
  "version": "1.0.0",
  "description": "Back-End for NiJobs website",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon src/index.js",
    "prod": "cross-env NODE_ENV=production node src/index.js",
    "lint": "eslint src test --max-warnings 0",
    "lint-fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=test mocha --exit",
    "ci": "npm run lint && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run ci"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NIAEFEUP/nijobs-be.git"
  },
  "author": "NIAEFEUP",
  "license": "GPL-3.0",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.13.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "dotenv-flow": "^3.0.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "mongoose": "^5.4.11",
    "mongoose-unique-array": "^0.3.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  }
}
