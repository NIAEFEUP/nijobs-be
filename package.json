  "license": "GPL-3.0",
  "devDependencies": {
    "@babel/preset-env": "^7.15.6",
    "babel-jest": "^27.2.0",
    "babel-plugin-transform-import-meta": "^2.1.0",
    "eslint": "^8.0.1",
    "jest": "^27.2.5",
    "nodemon": "^2.0.19",
    "npm-audit-helper": "^2.3.24",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "babel": "^6.23.0",
    "base64url": "^3.0.1",
    "bcrypt": "^5.0.1",
    "cloudinary": "^1.24.0",
    "dotenv-flow": "^3.0.0",
