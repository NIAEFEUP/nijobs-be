    "linkedom": "^0.11.1",
    "lodash": "^4.17.20",
    "mongoose": "^6.5.2",
    "mongoose-unique-array": "^0.3.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.4-lts.1",
    "nodemailer": "^6.7.2",
    "nodemailer-express-handlebars": "^5.0.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "rate-limit-mongo": "^2.1.0"
  }
