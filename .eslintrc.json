{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "brace-style": ["error", "1tbs"],
        "eqeqeq": ["error", "always"],
        "semi": ["error", "always"],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "no-console": ["warn"]
    }
}